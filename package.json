{
  "name": "artistry-ui",
  "version": "0.0.1",
  "description": "A lightweight react UI component library developed with dumi.",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "keywords": [
    "react",
    "component",
    "components",
    "typescript",
    "frontend"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/For-lizhuo/artistry-ui"
  },
  "homepage": "https://for-lizhuo.github.io/artistry-ui/guide",
  "scripts": {
    "start": "npm run dev",
    "dev": "dumi dev",
    "build": "father build",
    "build:watch": "father dev",
    "docs:build": "dumi build",
    "deploy": "gh-pages -d docs-dist",
    "prepare": "husky install && dumi setup",
    "doctor": "father doctor",
    "lint": "npm run lint:es && npm run lint:css",
    "lint:css": "stylelint \"{src,test}/**/*.{css,less}\"",
    "lint:es": "eslint \"{src,test}/**/*.{js,jsx,ts,tsx}\"",
    "prepublishOnly": "father doctor && npm run build"
  },
  "authors": [
    "lizhuo"
  ],
  "license": "MIT",
  "files": [
    "dist"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{md,json}": [
      "prettier --write --no-error-on-unmatched-pattern"
    ],
    "*.{css,less}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --parser=typescript --write"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react": ">=16.9.0",
    "react-dom": ">=16.9.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@types/react": "^18.0.0",
    "@types/react-copy-to-clipboard": "^5.0.5",
    "@types/react-dom": "^18.0.0",
    "@types/react-transition-group": "^4.4.6",
    "@umijs/lint": "^4.0.0",
    "dumi": "^2.2.9",
    "eslint": "^8.23.0",
    "father": "^4.1.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-imports": "^3.0.0",
    "prettier-plugin-packagejson": "^2.2.18",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "stylelint": "^14.9.1"
  },
  "dependencies": {
    "@ant-design/icons": "^5.2.6",
    "@babel/runtime": "^7.23.1",
    "gh-pages": "^6.0.0",
    "react-copy-to-clipboard": "^5.1.0",
    "react-transition-group": "^4.4.5",
    "styled-components": "^6.0.8",
    "use-eye-dropper": "^1.6.0"
  }
}
